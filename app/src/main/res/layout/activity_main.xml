<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondoscuro">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="REGISTRO DE VENTAS"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORDEN DE VENTA"
                    android:layout_marginBottom="20dp"
                    android:textColor="#fff"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="CLIENTE"
                    android:textColor="#fff"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA DE VENTA"
                    android:textColor="#fff"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRODUCTO"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANTIDAD"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRECIO"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL IMPORTE"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:textColorHint="#fff"
                    android:background="@drawable/marcoedit"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/orden_edit"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:textColorHint="#fff"
                    android:background="@drawable/marcoedit"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/cliente_edit"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:textColorHint="#fff"
                    android:background="@drawable/marcoedit"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/fecha_edit"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:textColorHint="#000"
                    android:background="@drawable/marcoedit"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/productos_spinner"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:textColorHint="#fff"
                    android:background="@drawable/marcoedit"
                    android:layout_marginLeft="20dp"
                    android:inputType="number"
                    android:id="@+id/cantidad_edit"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:textColorHint="#fff"
                    android:background="@drawable/marcoedit"
                    android:layout_marginLeft="20dp"
                    android:inputType="number"
                    android:id="@+id/precio_edit"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:textColorHint="#fff"
                    android:background="@drawable/marcoedit"
                    android:layout_marginLeft="20dp"
                    android:inputType="number"
                    android:id="@+id/total_edit"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:layout_marginRight="20dp"
                android:id="@+id/agregar_boton">
            </Button>
        </LinearLayout>







    </LinearLayout>

</RelativeLayout>